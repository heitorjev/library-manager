<div id="editBookModal" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <h2>Editar Livro</h2>
            <button class="close-modal">&times;</button>
        </div>
        <div class="modal-body">
            <form id="editBookForm">
                <input type="hidden" id="editBookId" name="id">
                <div class="form-group">
                    <label for="editTitle">Título</label>
                    <input type="text" id="editTitle" name="title" required>
                </div>
                <div class="form-group">
                    <label for="editAutor">Autor</label>
                    <input type="text" id="editAutor" name="autor" required>
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label for="editQuantity">Quantidade</label>
                        <input type="number" id="editQuantity" name="quantity" min="0" required>
                    </div>
                    <div class="form-group">
                        <label for="editPublisher">Editora</label>
                        <input type="text" id="editPublisher" name="publisher">
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label for="editYear">Ano</label>
                        <input type="number" id="editYear" name="year" min="1000" max="2099">
                    </div>
                    <div class="form-group">
                        <label for="editIsbn">ISBN</label>
                        <input type="text" id="editIsbn" name="isbn">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary close-modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary">Salvar Alterações</button>
                </div>
            </form>
        </div>
    </div>
</div>
