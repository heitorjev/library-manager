    <script>
        $(document).ready(function() {
            let currentPage = 1;
            let itemsPerPage = 5;

            function getTableData() {
                const data = [];
                $('#booksTable tbody tr').each(function() {
                    const row = $(this);
                    data.push({
                        title: row.find('td:eq(0)').text(),
                        author: row.find('td:eq(1)').text(),
                        quantity: parseInt(row.find('td:eq(2)').text()),
                        status: row.find('td:eq(3)').text()
                    });
                });
                return data;
            }

            function displayBooks(page, itemsPerPage, books) {
                const start = (page - 1) * itemsPerPage;
                const end = start + itemsPerPage;
                const paginatedBooks = books.slice(start, end);

                $("#booksTable tbody").empty();
                paginatedBooks.forEach(book => {
                    $("#booksTable tbody").append(`
                        <tr>
                            <td>${book.title}</td>
                            <td>${book.author}</td>
                            <td>${book.quantity}</td>
                            <td>${book.status}</td>
                        </tr>
                    `);
                });

                displayPagination(books.length, page, itemsPerPage);
            }

            function displayPagination(totalItems, currentPage, itemsPerPage) {
                const totalPages = Math.ceil(totalItems / itemsPerPage);
                let paginationHtml = `<button class="page-btn first-page" ${currentPage === 1 ? 'disabled' : ''}>First</button>`;

                for (let i = 1; i <= totalPages; i++) {
                    paginationHtml += `<button class="page-btn ${i === currentPage ? 'active' : ''}" data-page="${i}">${i}</button>`;
                }

                paginationHtml += `<button class="page-btn last-page" ${currentPage === totalPages ? 'disabled' : ''}>Last</button>`;

                $("#pagination").html(paginationHtml);
            }

            const initialData = getTableData();
            displayBooks(currentPage, itemsPerPage, initialData);

            $("#pagination").on("click", ".page-btn", function() {
                if ($(this).hasClass('first-page')) {
                    currentPage = 1;
                } else if ($(this).hasClass('last-page')) {
                    currentPage = Math.ceil(initialData.length / itemsPerPage);
                } else {
                    currentPage = parseInt($(this).data("page"));
                }
                displayBooks(currentPage, itemsPerPage, initialData);
            });

            $("#itemsPerPage").change(function() {
                itemsPerPage = parseInt($(this).val());
                currentPage = 1;
                displayBooks(currentPage, itemsPerPage, initialData);
            });

            $("#searchInput").on("input", function() {
                const searchTerm = $(this).val().toLowerCase();
                const filteredBooks = initialData.filter(book => 
                    book.title.toLowerCase().includes(searchTerm) || 
                    book.author.toLowerCase().includes(searchTerm)
                );
                currentPage = 1;
                displayBooks(currentPage, itemsPerPage, filteredBooks);
            });

            $("#loginBtn").click(function() {
                $("#loginPopup").fadeIn();
            });

            $(".close").click(function() {
                $("#loginPopup").fadeOut();
            });

            $(window).click(function(event) {
                if (event.target == $("#loginPopup")[0]) {
                    $("#loginPopup").fadeOut();
                }
            });
        });
    </script>
