            background-color: #fff;
            border-radius: 12px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0;
        }

        th, td {
            padding: 1rem;
            text-align: left;
        }

        th {
            background-color: #f8fafc;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            font-size: 0.85rem;
            color: #64748b;
        }

        tr {
            transition: all 0.3s ease;
        }

        tr:nth-child(even) {
            background-color: #f8fafc;
        }

        tr:hover {
            background-color: #e2e8f0;
        }

        #pagination {
            display: flex;
            justify-content: center;
            margin-top: 2rem;
        }

        .page-btn {
            padding: 0.5rem 1rem;
            margin: 0 0.25rem;
            background-color: #fff;
            border: 1px solid #e2e8f0;
            border-radius: 8px;
            cursor: pointer;
            transition: all 0.3s ease;
            font-weight: 600;
        }

        .page-btn:hover, .page-btn.active {
            background-color: #6366f1;
            color: #fff;
            border-color: #6366f1;
        }

        .popup {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 1000;
            backdrop-filter: blur(5px);
        }

        .popup-content {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background-color: #fff;
            padding: 2rem;
            border-radius: 12px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            width: 90%;
            max-width: 400px;
        }

        .close {
            position: absolute;
            top: 10px;
            right: 15px;
            font-size: 1.5rem;
            cursor: pointer;
            color: #64748b;
            transition: color 0.3s ease;
        }

        .close:hover {
            color: #6366f1;
        }

        .login-option {
            display: block;
            width: 100%;
            padding: 1rem;
            margin-top: 1rem;
            background-color: #6366f1;
            color: #fff;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            transition: all 0.3s ease;
            font-size: 1rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .login-option:hover {
            background-color: #4f46e5;
            transform: translateY(-2px);
        }

        @media (max-width: 768px) {
            .table-controls {
                flex-direction: column;
            }

            #searchInput, #itemsPerPage {
                width: 100%;
                margin-bottom: 1rem;
            }

            .table-container {
                overflow-x: auto;
            }
        }
    </style>
