<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Entrar - Biblioteca Jamil Gadia</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="../../css/style.css">
</head>

<body>
    <a href="/" class="back-button">
        ← Voltar
    </a>
    
    <div class="login-card">
        <% if (user_role==='student' ){ %>
            <h1 class="login-title">Login do Aluno</h1>
            <form id="loginForm">
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" placeholder="email@al.educacao.sp.gov.br">
                </div>
                <div class="form-group">
                    <label for="password">Senha</label>
                    <input type="password" id="password" name="password" >
                    <p class="error-message" id="errorMessage"></p>
                </div>
                <button type="submit">Entrar</button>
            </form>
            <a href="#" class="forgot-password">Esqueceu a senha?</a>
            <p class="signup-link">
                Não tem uma conta? <a href="#">Cadastre-se</a>
            </p>
            <% }else{ %>
                <h1 class="login-title">Login do Professor</h1>
                <form id="loginForm">
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" id="email" name="email" placeholder="email@prof.educacao.sp.gov.br" >
                    </div>
                    <div class="form-group">
                        <label for="password">Senha</label>
                        <input type="password" id="password" name="password" >
                        <p class="error-message" id="errorMessage"></p>
                    </div>
                    <button type="submit">Entrar</button>
                </form>
                <a href="#" class="forgot-password">Esqueceu a senha?</a>
            <% } %>
    </div>
    <script src="../../js/login.js"></script>
    <script>
        document.getElementById('loginForm').addEventListener('submit', function (e) {
            e.preventDefault();

            const email = document.getElementById('email').value;
            const password = document.getElementById('password').value;
            const errorMessage = document.getElementById('errorMessage');

            errorMessage.style.display = 'none';
            errorMessage.textContent = '';

            if (email.trim() === '' || password.trim() === '') {
                errorMessage.textContent = 'Por favor, preencha todos os campos.';
                errorMessage.style.display = 'block';
                return;
            }

            fazerLogin(email, password);
        });
    </script>
    
</body>

</html>